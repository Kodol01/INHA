<div class="mt-5">
    <a href="/" class="me-3">Home</a>
    <a href="/kakao/book" class="me-3">도서검색</a>
    <a href="/kakao/local" class="me-3">지역검색</a>
    <a href="/kakao/blog" class="me-3">블로그검색</a>
    <a href="/users/cart" id="cart" class="me-3">장바구니</a>
    <a id="login" href="/users/login" class="me-3" style="float: right;">로그인</a>
    <a id="logout" href="#" class="me-3" style="float: right;">로그아웃</a>
    <a id="mypage" href="/users/mypage" class="me-3" style="float: right;">마이페이지</a>
    <hr>
</div>
<script>
    const email=sessionStorage.getItem("email") //가져올 때 ""붙여서 가져온다.
    const uid=sessionStorage.getItem("uid")

    if(email){ //로그인 상태
        $("#login").hide();
        $("#logout, #mypage, .cart").show(); //id는 #, class는 .
        $("#mypage").html(email);
      }else{ //로그아웃 상태
        $("#login").show();
        $("#logout, #mypage, #cart").hide();
      }
    
      $("#logout").on("click", function(e){
        e.preventDefault();
        if(!confirm("정말로 로그아웃 하실래요?")) return; //로그아웃 클릭하면 알림창 띄워서 한번 더 확인하고 취소누르면 다시 return되게한다.
        sessionStorage.clear(); //로그아웃되면 임시로 생긴 sessionStorage를 클리어한다.
        location.href="/"; //홈으로 이동
        location.href=""; //로그아웃 누를 때 있었던 페이지로 이동
      });
</script>